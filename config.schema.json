{
  "pluginAlias": "KEPCOEnergyMeter",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "default": "KEPCO Energy Meter",
        "required": true
      },
      "userId": {
        "title": "KEPCO User ID",
        "type": "string",
        "required": true
      },
      "userPwd": {
        "title": "KEPCO Password",
        "type": "string",
        "required": true
      },
      "deviceId": {
        "title": "Device ID",
        "type": "string",
        "default": "kepco-energy-meter",
        "required": true
      },
      "deviceName": {
        "title": "Device Name",
        "type": "string",
        "default": "KEPCO Energy Meter",
        "required": true
      },
      "deviceType": {
        "title": "Device Type",
        "type": "string",
        "default": "energymeter",
        "required": true,
        "readonly": true
      },
      "pollingInterval": {
        "title": "Polling Interval (minutes)",
        "type": "integer",
        "minimum": 1,
        "maximum": 60,
        "default": 10
      },
      "displayOutlet": {
        "title": "Display as Power Outlet",
        "type": "boolean",
        "default": true,
        "description": "Show as a power outlet in HomeKit"
      },
      "displayCurrentPower": {
        "title": "Display Current Power Usage",
        "type": "boolean",
        "default": true,
        "description": "Show current power usage as a sensor"
      },
      "displayTotalEnergy": {
        "title": "Display Total Energy Usage",
        "type": "boolean", 
        "default": true,
        "description": "Show total energy usage as a sensor"
      },
      "powerDisplayType": {
        "title": "Power Display Sensor Type",
        "type": "string",
        "default": "lightSensor",
        "oneOf": [
          { "title": "Light Sensor", "enum": ["lightSensor"] },
          { "title": "Temperature Sensor", "enum": ["temperatureSensor"] },
          { "title": "Humidity Sensor", "enum": ["humiditySensor"] }
        ],
        "description": "Sensor type for displaying power (Light/Temperature/Humidity)"
      }
    }
  },
  "layout": [
    {
      "type": "flex",
      "flex-flow": "row wrap",
      "items": [
        "name"
      ]
    },
    {
      "type": "fieldset",
      "title": "KEPCO Account",
      "items": [
        "userId",
        "userPwd"
      ]
    },
    {
      "type": "fieldset",
      "title": "Device Settings",
      "items": [
        "deviceId",
        "deviceName",
        "deviceType"
      ]
    },
    {
      "type": "fieldset",
      "title": "Display Settings",
      "expandable": true,
      "expanded": true,
      "items": [
        "displayOutlet",
        "displayCurrentPower",
        "displayTotalEnergy",
        "powerDisplayType"
      ]
    },
    {
      "type": "fieldset",
      "title": "Advanced Settings",
      "expandable": true,
      "expanded": false,
      "items": [
        "pollingInterval"
      ]
    }
  ],
  "display": "compact"
}